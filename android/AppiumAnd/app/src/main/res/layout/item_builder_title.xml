<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llayRoot"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingHorizontal="17dp"
    >

    <View android:layout_width="0dp" android:layout_height="1dp"
        android:layout_weight="1" android:background="#ccc"
        android:layout_gravity="center_vertical"/>

    <ImageView android:id="@+id/ivTitle2"
        android:layout_width="50dp" android:layout_height="50dp"
        android:layout_marginLeft="6dp" android:src="@mipmap/ic_launcher"
        />

    <TextView android:id="@+id/tvTitle2" android:layout_width="wrap_content" android:layout_height="wrap_content"
        tools:text="None Left" android:textSize="21dp" android:textColor="#25313E"
        android:layout_marginHorizontal="6dp" android:textStyle="bold"
        android:layout_gravity="center_vertical"/>

    <View android:layout_width="0dp" android:layout_height="1dp"
        android:layout_weight="1" android:background="#ccc"
        android:layout_gravity="center_vertical"/>

</LinearLayout>